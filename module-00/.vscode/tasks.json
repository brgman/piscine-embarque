{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: avr-gcc build active file",
            "command": "/usr/bin/avr-gcc",
            "args": [
                "-g", // Debugging symbols
                "-mmcu=atmega328", // Specify ATmega328B (similar to 328P)
                "-O1", // Optimization level (adjust as needed)
                "-fdiagnostics-color=always",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.elf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}